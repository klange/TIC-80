import tic80

let t=0
let x=96
let y=24

def TIC():
 if tic80.btn(0): y-=1
 if tic80.btn(1): y+=1
 if tic80.btn(2): x-=1
 if tic80.btn(3): x+=1

 tic80.cls(13)
 tic80.spr(
  1+t%60//30*2,
  x,y,
  colorkey=14,
  scale=3,
  w=2,h=2
 )
 tic80.print("HELLO WORLD!",84,84)
 t+=1

